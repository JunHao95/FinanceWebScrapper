{
  "alpha_vantage": {
    "mode": "time_series_daily",
    "fallback_to_yahoo": true,
    "batch_size": 100,
    "enable_retry_on_rate_limit": true
  },
  "mongodb": {
    "enabled": true,
    "connection_string": "mongodb://localhost:27017/",
    "database": "stock_data",
    "note": "Set enabled to false to disable MongoDB storage"
  },
  "portfolio": {
    "note": "Define your portfolio allocations here. Weights will be auto-normalized to sum to 1.0",
    "allocations": {
      "AAPL": 0.30,
      "MSFT": 0.25,
      "GOOG": 0.20,
      "AMZN": 0.15,
      "NVDA": 0.10
    },
    "total_value": 100000,
    "note2": "total_value is optional and used only for display purposes in reports"
  },
  "email": {
    "enabled": false,
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "sender_email": "your-email@gmail.com",
    "sender_password": "your-app-password",
    "recipient_email": "recipient@example.com"
  },
  "logging": {
    "level": "INFO",
    "file": "logs/stock_scraper.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
